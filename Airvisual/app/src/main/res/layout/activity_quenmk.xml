<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgregis"
    tools:context=".MainActivity2">
    <LinearLayout
        android:id="@+id/buttonarrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:backgroundTint="#dbe5dd"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/otp"
        android:layout_width="379dp"
        android:layout_height="105dp"
        android:layout_below="@+id/buttonarrow"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="left"
        android:text="Password Recovery"
        android:textColor="#4b784e"
        android:textSize="31.5sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_below="@+id/otp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/amethysta"
            android:gravity="left"
            android:text="Enter your Email"
            android:textColor="#9E9999"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/code1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext_button"
            android:fontFamily="@font/lexend"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="#4b784e"
            android:textColorHint="#4b784e"
            android:textSize="22sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/amethysta"
            android:gravity="left"
            android:text="Enter your password"
            android:textColor="#9E9999"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/code2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext_button"
            android:fontFamily="@font/lexend"
            android:hint="Password"
            android:padding="15dp"
            android:textColor="#4b784e"
            android:textColorHint="#4b784e"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/amethysta"
            android:gravity="left"
            android:text="Enter your password again"
            android:textColor="#9E9999"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_edittext_button"
            android:fontFamily="@font/lexend"
            android:hint="Password "
            android:padding="15dp"
            android:textColor="#4b784e"
            android:textColorHint="#4b784e"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/layout_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_resend"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#4b784e"
            android:padding="13dp"
            android:text="Reset Password"
            android:textSize="20dp" />


    </LinearLayout>


</RelativeLayout>